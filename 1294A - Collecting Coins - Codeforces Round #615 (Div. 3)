#include <bits/stdc++.h>
using namespace std;

int main(){
    int t;
    cin>>t;
    while(t--){
        int a,b,c,n;
        cin>>a>>b>>c>>n;
        int arr[3]={a,b,c};
        sort(arr,arr+3);
        if((n-(2*arr[2]-arr[0]-arr[1]))%3==0 && n-(2*arr[2]-arr[0]-arr[1])>=0){
            cout<<"YES"<<endl;
        }
        else{
            cout<<"NO"<<endl;
        }
        
    }
    
}
